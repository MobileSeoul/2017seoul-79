<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="170dp"
    android:layout_gravity="center"
    android:layout_marginLeft="11.6dp"
    android:layout_marginRight="11.6dp"
    android:layout_marginTop="5.83dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/b_event_background"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:background="@color/textColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/b_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="88dp"
                android:layout_weight="1"
                android:background="@null"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/b_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="16.67sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/b_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.67dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="17.10.21 (í† )" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>