<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    tools:background="@drawable/login_backgroundopacity50_640x360">

    <ImageView
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginLeft="46.67dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/login_step1_icon_266x30" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23.33dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 이용약관 필수 (동의)"
            android:textColor="@color/textColor"
            android:textSize="13.67sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/register_a_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp" />

    </LinearLayout>


    <TextView
        android:layout_width="330dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="7.67dp"
        android:background="@drawable/setp"
        android:text="\n 내용내용내용" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28.67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 취급방법 및 수집 및 이용 동의 (필수)"
            android:textColor="@color/textColor"
            android:textSize="13.67sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/register_a_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

    </LinearLayout>


    <TextView
        android:layout_width="330dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="7.67dp"
        android:background="@drawable/setp"
        android:text="\n 내용내용내용" />

    <Button
        android:id="@+id/register_a_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/more_round"
        android:text="동의하고 다음단계로"
        android:textColor="@color/white"
        android:textSize="16.67sp"
        android:textStyle="bold" />

</LinearLayout>