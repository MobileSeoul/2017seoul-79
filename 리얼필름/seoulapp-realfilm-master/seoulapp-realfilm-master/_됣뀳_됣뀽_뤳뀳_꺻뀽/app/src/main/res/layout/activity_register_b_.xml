<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_b_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_backgroundopacity50_640x360"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reg_b_step"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginLeft="46.67dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/login_step2_icon_266x30" />

    <ImageView
        android:id="@+id/reg_b_logo"
        android:layout_width="126.67dp"
        android:layout_height="103.33dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="40dp"
        tools:background="@drawable/logo2" />

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_margin="3.33dp"
            android:background="@drawable/login_name_icon_16x16" />

        <EditText
            android:id="@+id/register_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="아이디를 입력하세요"
            android:inputType="text"
            android:maxLength="12"
            android:textSize="11.67sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/textColor" />

    <TextView
        android:id="@+id/asdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="10sp"
        tools:text="사용가능" />


    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_margin="3.33dp"
            android:background="@drawable/login_lock_icon_50x50" />

        <EditText
            android:id="@+id/register_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textSize="11.67sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/textColor" />

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11.33dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_margin="3.33dp"
            android:background="@drawable/login_lock_icon_50x50" />

        <EditText
            android:id="@+id/register_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="비밀번호를 한번 더 입력하세요"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textSize="11.67sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/textColor" />

    <Button
        android:id="@+id/register_b_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/more_round"
        android:text="다음단계로"
        android:textColor="@color/white"
        android:textSize="16.67sp"
        android:textStyle="bold" />

</LinearLayout>