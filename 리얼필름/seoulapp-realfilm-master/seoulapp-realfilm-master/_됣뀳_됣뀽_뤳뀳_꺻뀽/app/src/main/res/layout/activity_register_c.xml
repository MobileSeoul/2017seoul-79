<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_c_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/login_backgroundopacity50_640x360">

    <ImageView
        android:id="@+id/reg_c_step"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_marginLeft="46.67dp"
        android:layout_marginTop="23dp"
        tools:background="@drawable/login_step3_icon_266x30" />

    <ImageView
        android:id="@+id/reg_c_logo"
        android:layout_width="126.67dp"
        android:layout_height="103.33dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="40dp"
        tools:background="@drawable/logo2" />


    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64.67dp"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16.7dp"
            android:layout_height="16.7dp"
            android:layout_margin="2.33dp"
            android:background="@drawable/login_name_icon_16x16" />

        <EditText
            android:id="@+id/reg_c_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="이름을 입력하세요"
            android:inputType="text"
            android:maxLength="10"
            android:textSize="11.67sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/textColor" />

    <LinearLayout
        android:id="@+id/reg_c_date"
        android:layout_width="216.67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2.33dp"
            android:text="생년월일"
            android:textColor="@color/textColor"
            android:textSize="11.67sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_c_date_text"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="2017  10  21" />

        <ImageButton
            android:layout_width="16.67dp"
            android:layout_height="16.67dp"
            android:layout_marginLeft="20.33dp"
            android:background="@drawable/login_more_btn_16x16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/textColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reg_c_man"
            android:layout_width="103.43dp"
            android:layout_height="43.33dp"
            android:src="@drawable/login_manoff_btn_103x43" />

        <ImageView
            android:id="@+id/reg_c_woman"
            android:layout_width="103.43dp"
            android:layout_height="43.43dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/login_womanoff_btn_103x43" />

    </LinearLayout>

    <Button
        android:id="@+id/register_c_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="142dp"
        android:background="@drawable/more_round"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="16.67sp"
        android:textStyle="bold" />

</LinearLayout>