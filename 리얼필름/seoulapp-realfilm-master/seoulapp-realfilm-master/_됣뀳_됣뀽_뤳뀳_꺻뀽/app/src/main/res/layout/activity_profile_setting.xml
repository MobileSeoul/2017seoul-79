<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_line"
    android:orientation="vertical"
    tools:context="com.app.seoul.View.Activity.ProfileSettingActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52.66dp"
        android:background="@color/textColor"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="프로필 관리"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/p_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20.33dp"
            android:text="닫기"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:background="@color/white"
        app:layout_collapseMode="parallax">

        <ImageView
            android:id="@+id/p_setting_pbackg"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            tools:background="@drawable/mypage_cover_default_1080x600" />

        <ImageButton
            android:id="@+id/p_setting_backimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="11.67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mypage_camera2_btn_30x30" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/p_setting_profile"
            android:layout_width="83.33dp"
            android:layout_height="83.33dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="107dp"
            tools:background="@drawable/mypage_profile_default_250x250" />

        <ImageButton
            android:id="@+id/p_setting_changepimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/mypage_camera1_btn_24x24" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="90dp"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_setting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="김여원" />

            <ImageButton
                android:id="@+id/p_setting_cname"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mypage_edit_btn_20x20" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@drawable/toolbar_shadow"
            android:orientation="vertical" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.67dp"
        android:layout_marginTop="14dp"
        android:text="상태 메시지"
        android:textColor="@color/textColor"
        android:textSize="11.67sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/p_setting_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="상태 메시지를 입력해주세요"
            android:textColor="@color/black"
            android:textColorHint="@color/six"
            android:textSize="13.67sp" />

        <ImageButton
            android:id="@+id/p_setting_status_del"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginRight="11.67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ddd" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.67dp"
        android:layout_marginTop="24dp"
        android:text="이메일 / 비밀번호"
        android:textColor="@color/textColor"
        android:textSize="11.67sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="이메일"
            android:textColor="@color/black"
            android:textSize="13.67sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_setting_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textSize="13.67sp"
            tools:text="****@naver.com" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="13.67sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_setting_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:textSize="13.67sp"
            tools:text="****" />

        <ImageButton
            android:id="@+id/p_setting_changepw"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginRight="11.67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_change_btn_40x20" />

    </LinearLayout>


</LinearLayout>
