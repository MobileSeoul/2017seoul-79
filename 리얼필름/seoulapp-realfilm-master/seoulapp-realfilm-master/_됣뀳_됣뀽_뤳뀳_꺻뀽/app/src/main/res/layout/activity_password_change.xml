<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_line"
    android:orientation="vertical"
    tools:context="com.app.seoul.View.Activity.PasswordChangeActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52.66dp"
        android:background="@color/textColor"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="비밀번호 수정"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20.33dp"
            android:text="닫기"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:text="현재 비밀번호"
        android:textColor="@color/textColor"
        android:textSize="11.67sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pw_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="현재 비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/six"
            android:textSize="13.67sp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:text="새로운 비밀번호"
        android:textColor="@color/textColor"
        android:textSize="11.67sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pw_newa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="새로운 비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/six"
            android:textSize="13.67sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pw_newb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="새로운 비밀번호를 한번 더 입력해주세요."
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/six"
            android:textSize="13.67sp" />


    </LinearLayout>

    <Button
        android:id="@+id/pw_submit"
        android:layout_width="match_parent"
        android:layout_height="33.33dp"
        android:layout_marginLeft="46.67dp"
        android:layout_marginRight="46.67dp"
        android:layout_marginTop="233.67dp"
        android:background="@drawable/more_round"
        android:text="변경완료"
        android:textColor="@color/white"
        android:textSize="16.67sp"
        android:textStyle="bold" />

</LinearLayout>
