<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="3.33dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15.33dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16.67sp"
            android:textStyle="bold"
            tools:text="업데이트 안내" />

        <ImageButton
            android:id="@+id/notice_btn"
            android:layout_width="20dp"
            android:layout_height="13dp"
            android:layout_marginRight="12.33dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/settings_more_btn_20x13" />

    </LinearLayout>

    <TextView
        android:id="@+id/notice_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10.33dp"
        android:textColor="@color/regular"
        android:textSize="12sp"
        tools:text="업데이트   |    17.10.30" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <LinearLayout
            android:id="@+id/notice_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="27.33dp"
            android:orientation="vertical"
            android:paddingBottom="14.67dp"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/regular"
                android:textSize="12sp"
                tools:text="카카오톡 카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡카카오톡" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>