<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_line"
    android:orientation="vertical"
    tools:context="com.app.seoul.View.Activity.ChangeNameActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52.66dp"
        android:background="@color/textColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cname_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4.67dp"
            android:layout_marginTop="15.33dp"
            android:background="@drawable/settings_back_btn_24x24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="148dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:text="이름 변경"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cname_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20.33dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="변경할 이름를 작성해 주세요."
        android:textColor="@color/textColor"
        android:textSize="11.67sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40.67dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cname_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="변경할 이름을 적어주세요."
            android:textColor="@color/black"
            android:textColorHint="@color/six"
            android:textSize="13.67sp" />

        <ImageButton
            android:id="@+id/cname_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="11.67dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_clear_btn_20x20" />

    </LinearLayout>

</LinearLayout>
