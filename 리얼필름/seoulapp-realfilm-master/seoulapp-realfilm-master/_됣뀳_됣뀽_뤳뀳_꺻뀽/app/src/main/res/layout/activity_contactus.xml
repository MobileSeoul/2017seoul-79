<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.app.seoul.View.Activity.ContactusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/contact_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4.67dp"
            android:layout_marginTop="15.33dp"
            android:background="@drawable/settings_back_btn_24x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="123.33dp"
            android:gravity="center"
            android:text="문의하기"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:text="버그/개선 문의"
        android:textColor="@color/black"
        android:textSize="16.67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13.67dp"
        android:text="@string/contact_a"
        android:textColor="@color/regular"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="133dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16.67dp"
        android:background="@drawable/contact_round"
        android:orientation="vertical">

        <EditText
            android:id="@+id/contact_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/contact_round"
            android:gravity="top"
            android:hint="내 답변"
            android:inputType="text"
            android:textColor="@color/regular"
            android:textSize="16.67sp" />

    </LinearLayout>


    <EditText
        android:id="@+id/contact_email"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/contact_round"
        android:hint="  답변받을 메일주소를 입력하세요."
        android:inputType="text"
        android:textColor="@color/regular"
        android:textSize="16.67sp" />

    <Button
        android:id="@+id/contact_submit"
        android:layout_width="266.67dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="119dp"
        android:background="@drawable/more_round"
        android:text="문의하기"
        android:textColor="@color/white"
        android:textSize="16.67sp" />

</LinearLayout>
